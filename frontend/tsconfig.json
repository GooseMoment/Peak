{
    "compilerOptions": {
        "alwaysStrict": true,
        "allowJs": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "paths": {
            "@/*": ["src/*"],
            "@pages/*": ["src/pages/*"],
            "@api/*": ["src/api/*"],
            "@components/*": ["src/components/*"],
            "@utils/*": ["src/utils/*"],
            "@containers/*": ["src/containers/*"],
            "@assets/*": ["src/assets/*"],
            "@queries/*": ["src/queries/*"],
            "@routers/*": ["src/routers/*"],
            "@public/*": ["public/*"]
        },
        "strict": true,
        "skipLibCheck": true,
        "module": "ES2022",
        "moduleResolution": "node",
        "target": "ES2016",
        "jsx": "react-jsx"
    },
    "include": ["src/**/*"],
    "exclude": ["**/dist/*", "**/public/*"],
    "typeAcquisition": {
        "enable": true
    }
}
